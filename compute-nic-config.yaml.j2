network_config:
- type: linux_bond
  use_dhcp: false
  bonding_options: "mode=4"
  mtu: 1600
  name: bond0
  members:
    - type: interface
      name: nic2
      mtu: 1600
    - type: interface
      name: nic3
      mtu: 1600
- type: interface
  name: nic1
  use_dhcp: false
  addresses:
  - ip_netmask: {{ ctlplane_ip }}/24
  routes:
  - ip_netmask: 169.254.169.254/32
    next_hop: 172.21.0.11/24
  - ip_netmask: 172.17.1.81/32
    next_hop: 172.21.0.254
  - ip_netmask: 172.17.1.80/32
    next_hop: 172.21.0.254
